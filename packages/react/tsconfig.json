{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "jsx": "react",
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationDir": "types",
        "resolveJsonModule": true,
        "types": [
            "node"
        ]
    }
}
